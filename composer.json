{
    "name": "yanickmorza/limabundle",
    "type": "symfony-bundle",
    "description": "Light Interface Maker Application",
    "homepage": "https://github.com/yanickmorza/limabundle",
    "license": "MIT",
    "minimum-stability": "dev",
    "authors": [
        {
            "name": "Yanick Morza"
        }
    ],
    "require": {
        "php": ">=7.2.5",
        "symfony/swiftmailer-bundle": "^3.5"
    },
    "config": {
        "optimize-autoloader": true
    },
    "autoload": {
        "psr-4": {
            "App\\LimaBundle\\": "src/"
        }
    },
    "scripts":{
        "post-create-project-cmd": [
            "php -r \"copy('vendor/yanickmorza/limabundle/src/Command/_flashes.html.twig', 'templates/_flashes.html.twig');\"",
            "php -r \"copy('vendor/yanickmorza/limabundle/src/Command/base.html.twig', 'templates/base.html.twig')\""

        ],
        "execute": [
            "@php vendor/yanickmorza/limabundle/src/Command/installation.php" 
        ],
        "install": [
            "@composer execute"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.1.9.x-dev"
        }
    }
}